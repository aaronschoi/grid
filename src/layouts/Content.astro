---
import { ViewTransitions } from "astro:transitions";

interface Props {
  title: string;
  description: string;
}

const { title, description }: Props = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <ViewTransitions />
    <title>{title}</title>
  </head>
  <body>
    <header>
      <a href="/"
        ><h1 transition:name="title" transition:animate="fade">CSS Grid</h1></a
      >
      {title}
    </header>
    <slot />
    <footer>{title}</footer>
    <style lang="scss" is:global></style>
  </body><style lang="scss" is:global>
    @use "../scss/colors" as colors;
    @font-face {
      font-family: "Righteous";
      src: url("/fonts/Righteous-Regular.ttf") format("truetype");
      font-weight: normal;
      font-style: normal;
      font-display: swap;
    }
    body {
      background-color: colors.$mindaro;
    }
    h1 {
      font-family: "Righteous", sans-serif;
      font-size: 2rem;
      margin: 0;
      padding: 0;
      text-align: center;
    }
    header {
      display: flex;
      gap: 1rem;
    }
  </style>
</html>
